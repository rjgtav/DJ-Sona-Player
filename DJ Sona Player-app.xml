<application xmlns="http://ns.adobe.com/air/application/3.8">
  <id>com.ricardotavares.dj-sona-player</id>
  <versionNumber>1.0</versionNumber>
  <filename>DJ Sona Player</filename>
  <description>Use this app to loop through all DJ Sona's tracks.
You can loop a track, switch to the next one and watch it on fullscreen.</description>
  <name>DJ Sona Player</name>
  <copyright>Riot Games</copyright>
  <initialWindow>
    <content>DJ%20Sona%20Player.swf</content>
    <systemChrome>standard</systemChrome>
    <transparent>false</transparent>
    <visible>true</visible>
    <fullScreen>false</fullScreen>
    <aspectRatio>portrait</aspectRatio>
    <renderMode>auto</renderMode>
    <maximizable>true</maximizable>
    <minimizable>true</minimizable>
    <resizable>true</resizable>
  </initialWindow>
  <icon>
    <image16x16>icon/bin/icon-16.png</image16x16>
    <image32x32>icon/bin/icon-32.png</image32x32>
    <image48x48>icon/bin/icon-48.png</image48x48>
    <image128x128>icon/bin/icon-128.png</image128x128>
  </icon>
  <customUpdateUI>false</customUpdateUI>
  <allowBrowserInvocation>false</allowBrowserInvocation>
  <supportedProfiles>desktop extendedDesktop </supportedProfiles>
</application>
